@model WebApplication1.Models.Empleados

@{
    ViewData["Title"] = "Editar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Empleados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nombre_Empleado" class="control-label"></label>
                <input asp-for="Nombre_Empleado" class="form-control" />
                <span asp-validation-for="Nombre_Empleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad_Hijos" class="control-label"></label>
                <input asp-for="Cantidad_Hijos" class="form-control" />
                <span asp-validation-for="Cantidad_Hijos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bono" class="control-label"></label>
                <input asp-for="Bono" class="form-control" />
                <span asp-validation-for="Bono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

